<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/option_back">
    <LinearLayout
    android:layout_marginTop="65dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    	<TextView
    	    android:id="@+id/option_text_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:layout_marginLeft="10dp"
		    android:layout_gravity="center"
		    android:background="@drawable/option_con"
    	    />
	    <RadioGroup
		android:id="@+id/sensor_radiogroup"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:orientation="horizontal"
	    >
	    <RadioButton
		    android:id="@+id/sensor_1"
		    android:button="@null"  
			android:background="@drawable/option_fd_radio"
			android:layout_marginTop="20dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	    />
	    <RadioButton
	        android:id="@+id/sensor_2"
	        android:button="@null"  
			android:background="@drawable/option_vr_radio" 
			android:layout_marginLeft="20dp"
			android:layout_marginTop="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	  			/>
	    </RadioGroup>
	</LinearLayout>
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    	<TextView
    	    android:id="@+id/option_text_2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/option_music"
    	    />
	    <RadioGroup
		android:id="@+id/music_radiogroup"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:orientation="horizontal"
	    >
	    <RadioButton
		    android:id="@+id/music_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:button="@null"  
		    android:layout_marginTop="15dp"
			android:background="@drawable/option_mus_on_radio" 
	    />
	    <RadioButton
	        android:id="@+id/music_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:button="@null"
	        android:layout_marginLeft="20dp"
			android:layout_marginTop="15dp"
			android:background="@drawable/option_mus_off_radio" 
	        />
	    </RadioGroup>
	</LinearLayout> 
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    	<TextView
    	    android:id="@+id/option_text_3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:background="@drawable/option_level"
    	    />
	    <RadioGroup
		android:id="@+id/level_radiogroup"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:orientation="horizontal"
	    >
	    <RadioButton
		    android:id="@+id/level_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="15dp"
		    android:button="@null"  
			android:background="@drawable/option_lev_c_radio" 
	    />
	    <RadioButton
	        android:id="@+id/level_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_marginLeft="20dp"
	        android:button="@null"  
			android:background="@drawable/option_lev_m_radio" 
	        />
	    <RadioButton
		    android:id="@+id/level_3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="15dp"
		    android:layout_marginLeft="20dp"
		    android:button="@null"  
			android:background="@drawable/option_lev_h_radio" 
	    />
	    </RadioGroup>
	</LinearLayout>
</LinearLayout>